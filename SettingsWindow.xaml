<Window x:Class="BackupCleaner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instellingen - Backup Cleaner" 
        Height="500" Width="600"
        MinHeight="400" MinWidth="500"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Instellingen" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Configureer de Backup Cleaner instellingen" 
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Automatisch opruimen sectie -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸ• Automatisch opruimen" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Wanneer ingeschakeld, ruimt Backup Cleaner dagelijks om 02:00 uur automatisch oude backups op. De applicatie moet actief zijn (eventueel in de system tray) voor deze functie." 
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="chkAutoCleanup" 
                                  Content="Automatisch dagelijks opruimen inschakelen"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Checked="ChkAutoCleanup_Changed"
                                  Unchecked="ChkAutoCleanup_Changed"/>
                        
                        <TextBlock x:Name="txtAutoCleanupInfo" 
                                   Text="" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="30,8,0,0"
                                   Visibility="Collapsed"/>
                        
                        <Border Background="#FEF3C7" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ’¡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Nieuwe mappen worden bij automatisch opruimen overgeslagen totdat je ze handmatig hebt geconfigureerd." 
                                           TextWrapping="Wrap"
                                           Foreground="#92400E"
                                           FontSize="12"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Negeerlijst sectie -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸš« Negeerlijst" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,12">
                            <Run Text="Met de negeerlijst kun je bepaalde mappen of bestanden uitsluiten van het scannen en opruimen. Dit is handig voor speciale mappen die je niet wilt laten verwerken."/>
                        </TextBlock>
                        
                        <TextBlock Text="Hoe werkt het:" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="â€¢ EÃ©n regel per map of bestandsnaam om te negeren" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                            <TextBlock Text="â€¢ Regels die beginnen met # zijn commentaar" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                            <TextBlock Text="â€¢ Wildcards: * (meerdere tekens) en ? (Ã©Ã©n teken)" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                            <TextBlock Text="â€¢ Voorbeeld: '_*' negeert alle mappen die beginnen met _" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2"/>
                        </StackPanel>
                        
                        <Button x:Name="btnOpenIgnoreFile"
                                Content="ðŸ“ Negeerlijst openen in tekstverwerker" 
                                Click="BtnOpenIgnoreFile_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Left"/>
                        
                        <TextBlock x:Name="txtIgnorePath"
                                   Text="" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer met sluiten knop -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <Button Content="Sluiten" 
                    Click="BtnClose_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Right"
                    MinWidth="100"/>
        </Border>
    </Grid>
</Window>

