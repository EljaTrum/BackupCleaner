<Window x:Class="BackupCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backup Cleaner - Rentpro" 
        Height="750" Width="1000"
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ—‚ï¸ Backup Cleaner" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock x:Name="txtBackupPath" 
                               Text="Geen map geselecteerd" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="ðŸ“ Map Wijzigen" 
                        Click="BtnSelectFolder_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnScan" 
                        Grid.Column="0" 
                        Content="ðŸ” Scannen" 
                        Click="BtnScan_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,12,0"/>
                
                <Button x:Name="btnCleanup" 
                        Grid.Column="1" 
                        Content="ðŸ§¹ Opruimen" 
                        Click="BtnCleanup_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="chkAutoCleanup" 
                                  Content="Automatisch dagelijks opruimen"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Checked="ChkAutoCleanup_Changed"
                                  Unchecked="ChkAutoCleanup_Changed"/>
                        <Button Content="ðŸ“ Negeerlijst" 
                                Click="BtnOpenIgnoreFile_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource SecondaryBrush}"
                                Cursor="Hand"
                                Margin="16,0,0,0"
                                ToolTip="Open het bestand met genegeerde mappen/bestanden"/>
                    </StackPanel>
                    <TextBlock x:Name="txtAutoCleanupInfo" 
                               Text="" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="30,4,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="Min. leeftijd:" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,8,0"
                               ToolTip="Backups jonger dan dit aantal maanden worden nooit verwijderd"/>
                    <Border Background="White" 
                            CornerRadius="6" 
                            BorderBrush="{StaticResource SecondaryBrush}" 
                            BorderThickness="1"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="âˆ’" 
                                    Click="BtnDecreaseMinAge_Click" 
                                    Width="24" Height="24"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    Cursor="Hand"/>
                            <TextBlock x:Name="txtMinAge" 
                                       Text="1" 
                                       Width="20" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"/>
                            <Button Content="+" 
                                    Click="BtnIncreaseMinAge_Click" 
                                    Width="24" Height="24"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="mnd" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="4,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Bewaren:" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,8,0"
                               ToolTip="Standaard aantal backups om te bewaren per klant"/>
                    <Border Background="White" 
                            CornerRadius="6" 
                            BorderBrush="{StaticResource SecondaryBrush}" 
                            BorderThickness="1"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="âˆ’" 
                                    Click="BtnDecreaseDefault_Click" 
                                    Width="24" Height="24"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    Cursor="Hand"/>
                            <TextBlock x:Name="txtDefaultKeep" 
                                       Text="5" 
                                       Width="20" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"/>
                            <Button Content="+" 
                                    Click="BtnIncreaseDefault_Click" 
                                    Width="24" Height="24"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Customer List -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- List Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Column="0" 
                              x:Name="chkSelectAll"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              IsChecked="True"
                              Checked="ChkSelectAll_Changed"
                              Unchecked="ChkSelectAll_Changed"/>
                    <TextBlock Grid.Column="1" Text="Klant" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="Backups" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Bewaren" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Te verwijderen" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Vrij te maken" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                </Grid>
                
                <!-- List Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="lstCustomers">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="rowBorder"
                                        BorderBrush="#E5E7EB" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="0,12"
                                        Margin="0,0,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox Grid.Column="0" 
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock Text="{Binding FolderName}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>
                                            <Border x:Name="newBadge"
                                                    Background="{StaticResource AccentBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="8,0,0,0"
                                                    Visibility="Collapsed">
                                                <TextBlock Text="NIEUW" 
                                                           FontSize="10" 
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding TotalBackups}" 
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        
                                        <Border Grid.Column="3" 
                                                Background="#F3F4F6" 
                                                CornerRadius="6" 
                                                Padding="4,2"
                                                HorizontalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="âˆ’" 
                                                        Tag="{Binding}" 
                                                        Click="BtnDecrease_Click" 
                                                        Width="24" Height="24"
                                                        Background="Transparent" 
                                                        BorderThickness="0"
                                                        FontWeight="Bold"
                                                        Cursor="Hand"/>
                                                <TextBlock Text="{Binding BackupsToKeep}" 
                                                           Width="30" 
                                                           TextAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"/>
                                                <Button Content="+" 
                                                        Tag="{Binding}" 
                                                        Click="BtnIncrease_Click" 
                                                        Width="24" Height="24"
                                                        Background="Transparent" 
                                                        BorderThickness="0"
                                                        FontWeight="Bold"
                                                        Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="4" 
                                                   Text="{Binding BackupsToDeleteCount}" 
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   FontWeight="SemiBold"/>
                                        
                                        <TextBlock Grid.Column="5" 
                                                   Text="{Binding SizeToFreeFormatted}" 
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsNew}" Value="True">
                                        <Setter TargetName="rowBorder" Property="Background" Value="#FFF7ED"/>
                                        <Setter TargetName="newBadge" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <StackPanel x:Name="emptyState" 
                            Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Geen klantenmappen gevonden" 
                               FontSize="18" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,12,0,0"/>
                    <TextBlock Text="Selecteer een backup map en klik op 'Scannen'" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="txtStatus" 
                           Grid.Column="0"
                           Text="Gereed" 
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Klanten: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="txtCustomerCount" Text="0" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Te verwijderen: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="txtFilesToDelete" Text="0 bestanden" FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Vrij te maken: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="txtSpaceToFree" Text="0 B" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

